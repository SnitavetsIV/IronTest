<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <definition name="DefaultTemplate"
                template="/WEB-INF/layouts/mainLayout.jsp">
        <put-attribute name="titleBundle" value="default.title"/>
        <put-attribute name="header" value="/WEB-INF/tiles/common/header.jsp"/>
        <put-attribute name="menu" value="/WEB-INF/tiles/menu/mainMenu.jsp"/>
        <put-attribute name="body" value=""/>
        <put-attribute name="footer" value="/WEB-INF/tiles/common/footer.jsp"/>
    </definition>

    <definition name="guestMainPage" extends="DefaultTemplate">
        <put-attribute name="body"
                       value="/WEB-INF/tiles/body/mainBody.jsp"/>
    </definition>

    <definition name="userMainPage" extends="DefaultTemplate">
        <put-attribute name="body"
                       value="/WEB-INF/tiles/body/userBody.jsp"/>
    </definition>

    <definition name="loginPage" extends="DefaultTemplate">
        <put-attribute name="body"
                       value="/WEB-INF/tiles/body/authorization/loginBody.jsp"/>
    </definition>

    <definition name="registrationPage" extends="DefaultTemplate">
        <put-attribute name="body"
                       value="/WEB-INF/tiles/body/authorization/registrationBody.jsp"/>
    </definition>

</tiles-definitions>